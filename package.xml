    <requiredpackages>
        <requiredpackage minversion="5.3.0">com.woltlab.wcf</requiredpackage>
        <requiredpackage minversion="5.3.0">com.woltlab.calendar</requiredpackage>
        <requiredpackage minversion="5.3.0">de.softcreatr.wcf.jcoins</requiredpackage>
    </requiredpackages>

    <excludedpackages>
        <excludedpackage version="5.6.0 Alpha 1">com.woltlab.wcf</excludedpackage>
        <excludedpackage version="*">de.wcflabs.calendar.jcoins</excludedpackage>
    </excludedpackages>

    <instructions type="install">
        <instruction type="file" application="calendar" />
        <instruction type="template" application="calendar" />
        <instruction type="eventListener" />
        <instruction type="templateListener" />
        <instruction type="objectType" />
        <instruction type="language" />
        <instruction type="userGroupOption" />
        <instruction type="sql" run="standalone">update_events.sql</instruction>
    </instructions>

    <instructions type="update" fromversion="5.2.*">
        <instruction type="file" application="calendar" />
    </instructions>

    <instructions type="update" fromversion="5.3.0">
        <instruction type="file" application="calendar" />
    </instructions>

    <instructions type="update" fromversion="5.4.0">
